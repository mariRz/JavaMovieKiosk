<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ShowAllCustomersController"
      alignment="center" spacing="10"
      styleClass="root"
      prefWidth="800.0">

    <HBox alignment="center_left" spacing="10">
       <ImageView>
           <image>
               <Image url="@movie_icon.png"/>
           </image>
       </ImageView>
       <Text text="All Customers" styleClass="h1"/>
    </HBox>
    
    <TableView fx:id="customerTv" items="${controller.kiosk.customers}" prefWidth="800.0" prefHeight="400.0" >
        <placeholder><Label text="No results found."/></placeholder>        
        <columns>
            <TableColumn text="ID">
                <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Name">
                <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Balance">
                <cellValueFactory><PropertyValueFactory property="balance"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    
    <HBox alignment="center" spacing="10">
        <Button text="Exit"  fx:id="exitBtn" onAction="#handleExit"/>
    </HBox>
    
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>

</VBox>
