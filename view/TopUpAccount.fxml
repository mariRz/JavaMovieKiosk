<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TopUpAccountController"
      alignment="center" spacing="10"
      styleClass="root"
      prefWidth="800.0">

    <HBox alignment="center_left" spacing="10">
       <ImageView>
           <image>
               <Image url="@movie_icon.png"/>
           </image>
       </ImageView>
       <Text text="Top-up Account" styleClass="h1"/>
    </HBox>
    
    <GridPane alignment="center" hgap="10" vgap="10" >
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField text="" fx:id="idTxtFld" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Top-up Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField text="" fx:id="TopUpAmountTxtFld" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
    
    <HBox alignment="center" spacing="10">
        <Text text="" fx:id="topUpAccountTxt"/>
    </HBox>
    
    <HBox alignment="center" spacing="10">
        <Button text="Top-up Account" fx:id="TopUpAccountBtn" onAction="#handleAccountTopUp"/>
    </HBox>
    
    <HBox alignment="center" spacing="10">
        <Button text="Close"  fx:id="closeBtn" onAction="#handleClose"/>
    </HBox>

    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
</VBox>
